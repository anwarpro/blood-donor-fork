<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgf"
    tools:context=".DonorDataActivity">


    <TextView
        android:id="@+id/txtdonorcallname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textColor="#fff"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="178dp" />

    <TextView
        android:id="@+id/txtdonorcallphone"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/txtdonorcallname"
        tools:layout_editor_absoluteX="176dp" />
    <TextView
        android:id="@+id/txtdonorcallblood"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_marginTop="400dp"
        android:layout_height="wrap_content">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="80dp"
        android:layout_marginTop="100dp"
        android:background="#00b200"
        android:src="@drawable/ic_phone"
        tools:layout_editor_absoluteX="177dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</FrameLayout>