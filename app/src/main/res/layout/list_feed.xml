<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/bgf"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_blood_groupfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="O+"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffff"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/txt_namefeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_person"
            android:textColor="#ffff"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/txt_blood_groupfeed"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txt_addressfeed"
            android:layout_width="wrap_content"
            android:textColor="#ffff"
            android:drawablePadding="6dp"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/ic_home"
            android:layout_below="@id/txt_namefeed"
            android:layout_marginTop="8dp"
            android:text="Address" />

        <TextView
            android:id="@+id/txt_timefeed"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/txt_addressfeed"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="6dp"
            android:inputType="date"
            android:text="Date"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/txt_bagfeed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txt_namefeed"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="12dp"
            android:text="Bag"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/txt_phonefeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_below="@id/txt_timefeed"
            android:layout_marginTop="8dp"
            android:text="Phone"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/txt_areafeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_phonefeed"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_reason"
            android:drawablePadding="6dp"
            android:inputType="text"
            android:text="Area not specified"
            android:textColor="#ffff" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>