<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/bgf"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_namehosp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawablePadding="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_hospital"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/txt_addresshosp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/txt_namehosp"
            android:drawablePadding="6dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_home"
            android:text="Address"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/txt_phonehosp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_addresshosp"
            android:layout_marginTop="8dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_phone"
            android:text="Phone"
            android:textColor="#ffff" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>