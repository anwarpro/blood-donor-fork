<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bgf">

    <TextView
        android:id="@+id/textViewpop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="Name" />

    <Button
        android:id="@+id/popbtnmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewpop"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_design_login"
        android:text="Direction" />
    <Button
        android:id="@+id/popbtncall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popbtnmap"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/btn_design_login"
        android:text="Call" />

</RelativeLayout>